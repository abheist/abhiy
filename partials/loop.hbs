{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}


    <article class="{{post_class}} every-post-home">
        <div class="flex-row">
            {{#if author.image}}
                <div class="every-post-user-pic"
                     style="background: url({{author.image}}); background-size: cover; background-position: center;
                             background-repeat: no-repeat; border-radius: 100%;"></div>
            {{/if}}
            <div class="flex-column row-center margin-left-15">
                {{author}}
                {{tags prefix="on"}}
                <time datetime="{{date format=" YYYY-MM-DD "}}">{{date format="DD MMMM YYYY"}}</time>
            </div>
        </div>
        <header>
            {{#if image}}
                <div class="every-post-image"
                     style="background: url({{image}}); background-size: cover; background-position: center;
                             background-repeat: no-repeat;"></div>
            {{/if}}
            <h2 class="every-post-heading"><a href="{{url}}">{{title}}</a></h2>
        </header>
        <section>
            <p>{{excerpt words="26"}} <a href="{{url}}">&raquo;</a></p>
        </section>
    </article>




{{/foreach}}
{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}