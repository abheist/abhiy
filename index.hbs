{{!-- The big featured header --}}

<header class="width-100 header">
    <div class="cover-pic" {{#if @blog.cover}} style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    </div>
    <div class="user-details-box flex-row">
        <div class="profile-pic-section"
             style="background: url('assets/images/profile-pic.jpg') no-repeat center;
                    background-size: cover;"></div>
        <div class="profile-detail-section flex-1 margin-left-15">
            <h1 class="main-heading">Abhishek Kumar Singh</h1>
            <h2 class="main-subheading">UI/UX Designer | Full Stack Web Developer at KisanHub</h2>
            <p class="main-subheading-2">Pune, India | Design</p>
            <div class="header-work-section">
                <div class="single flex-row main-subheading-3">
                    <div class="left flex-2 light-color">Previous</div>
                    <div class="right flex-10 dark-color">
                        Cotanz, Erasmith Technologies Pvt. Ltd.
                    </div>
                </div>
                <div class="single flex-row main-subheading-3">
                    <div class="left flex-2 light-color">Education</div>
                    <div class="right flex-10 dark-color">GLA University, Mathura (INDIA)
                    </div>
                </div>
            </div>
            <div class="social-section flex-row margin-top-30">
                <div class="flex-4">
                    <a href="#" class="profile-mail dark-color">abhishek291093@gmail.com</a>
                </div>
                <div class="flex-5 flex-row row-center column-center">
                    <a href="#" class="flex-1"><i class="fa fa-facebook fa-lg dark-color"></i></a>
                    <a href="#" class="flex-1"><i class="fa fa-twitter fa-lg dark-color"></i></a>
                    <a href="#" class="flex-1"><i class="fa fa-linkedin fa-lg dark-color"></i></a>
                    <a href="#" class="flex-1"><i class="fa fa-github fa-lg dark-color"></i></a>
                    <div class="flex-3"></div>
                </div>
            </div>
        </div>
    </div>
    {{navigation}}
</header>

